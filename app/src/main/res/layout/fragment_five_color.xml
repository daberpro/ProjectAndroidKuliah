<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FiveColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:text="STMIK Pontianak"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#153266"
            android:textSize="25sp"
            android:textColor="@color/white"
            />
        <TextView
            android:text="KRS Online"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#18BDBB"
            android:textSize="25sp"
            android:textColor="@color/white"
            />
        <TextView
            android:text="Perpustakaan"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#672F81"
            android:textSize="25sp"
            android:textColor="@color/white"
            />
        <TextView
            android:text="Aset"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#B1B84F"
            android:textSize="25sp"
            android:textColor="@color/white"
            />
        <TextView
            android:text="Keuangan"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#C32039"
            android:textSize="25sp"
            android:textColor="@color/white"
            />

    </LinearLayout>

</FrameLayout>